{% extends "includes/layout.njk" %}

{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/select/macro.njk"        import govukSelect %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">Send a response</h1>

                <form action="{{ routes.controllers.ResponseController.post().url }}" method="post">

                    {{ govukInput({
                    classes: "govuk-input--width-10",
                    label: {
                        text: "Movement Reference Number",
                        isPageHeading: false
                    },
                    id: "movementReferenceNumber",
                    name: "movementReferenceNumber",
                    value: form.movementReferenceNumber.value,
                    errorMessage: form.movementReferenceNumber.error
                    }) }}

                    {{ govukInput({
                      classes: "govuk-input--width-10",
                      label: {
                        text: "Arrival Id",
                        isPageHeading: false
                      },
                      id: "arrivalId",
                      name: "arrivalId",
                      value: form.arrivalId.value,
                      errorMessage: form.arrivalId.error
                    }) }}

                    {{ govukSelect({
                      classes: "govuk-input--width-20",
                      label: {
                        text: "Status",
                        isPageHeading: false
                      },
                      id: "status",
                      name: "status",
                      errorMessage: form.status.error,
                      items: status
                    }) }}

                    {{ govukButton({
                      text: messages("site.continue"),
                      attributes: {id:"submit"}
                    }) }}
       </form>
      </div>
    </div>
  </div>

{% endblock %}
